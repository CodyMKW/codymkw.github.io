{
    "manifest_version": 2,
    "name": "Discord PWA Helper",
    "version": "1.4.2",

    "description": "Deletes X-Frame-Options response header for discord.com. Also injects some Javascript to enable notifications.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "key": "",

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [{
        "matches": ["https://discord.com/*"],
        "js": ["postMessage.js"],
        "all_frames": true,
        "run_at": "document_end"
    }],

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://discord.com/*",
        "storage",
		"tabs",
		"webNavigation"
    ],

    "update_url": "https://raw.githubusercontent.com/NeverDecaf/discord-PWA/master/updates.xml",
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "web_accessible_resources": [
        "manifest.json"
    ]
}